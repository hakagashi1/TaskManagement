<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>controller.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterControl</servlet-name>
        <servlet-class>controller.RegisterControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeControl</servlet-name>
        <servlet-class>controller.HomeControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutControl</servlet-name>
        <servlet-class>controller.LogoutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProjectControl</servlet-name>
        <servlet-class>controller.CreateProjectControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageProjectControl</servlet-name>
        <servlet-class>controller.ManageProjectControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageUser</servlet-name>
        <servlet-class>controller.manageUserControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTeamControl</servlet-name>
        <servlet-class>controller.AddTeamControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageTeamControl</servlet-name>
        <servlet-class>controller.ManageTeamControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProjectControl</servlet-name>
        <servlet-class>controller.AddProjectControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageTaskControl</servlet-name>
        <servlet-class>controller.ManageTaskControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SingleProjectControl</servlet-name>
        <servlet-class>controller.SingleProjectControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTask</servlet-name>
        <servlet-class>controller.AddTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/pages/samples/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterControl</servlet-name>
        <url-pattern>/pages/samples/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeControl</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutControl</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageUser</servlet-name>
        <url-pattern>/pages/user/manage-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageProjectControl</servlet-name>
        <url-pattern>/pages/project/manage-project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProjectControl</servlet-name>
        <url-pattern>/pages/project/create-project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTeamControl</servlet-name>
        <url-pattern>/add-team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageTeamControl</servlet-name>
        <url-pattern>/manage-team</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProjectControl</servlet-name>
        <url-pattern>/add-project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageTaskControl</servlet-name>
        <url-pattern>/pages/task/manage-task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SingleProjectControl</servlet-name>
        <url-pattern>/pages/project/single-project</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTask</servlet-name>
        <url-pattern>/pages/project/add-task</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
